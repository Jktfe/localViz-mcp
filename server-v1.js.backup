// Helper to get log level number
function getLogLevel() {
  const level = (CONFIG ? CONFIG.LOG_LEVEL : process.env.LOG_LEVEL) || 'info';
  const levels = { debug: 0, info: 1, warn: 2, error: 3 };
  return levels[level.toLowerCase()] || 1;
}

